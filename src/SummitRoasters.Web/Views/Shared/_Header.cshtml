<header class="bg-white shadow-sm sticky top-0 z-40" data-testid="header">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16 lg:h-20">
            <!-- Logo -->
            <a asp-controller="Home" asp-action="Index" class="flex items-center space-x-2 flex-shrink-0" data-testid="header-logo">
                <svg class="h-8 w-8 text-brand-500" viewBox="0 0 32 32" fill="currentColor" aria-hidden="true">
                    <path d="M16 2L6 18h6l-2 12 14-16h-6l4-12z"/>
                    <path d="M4 28L16 8l12 20H4z" opacity="0.3"/>
                    <path d="M8 28L16 12l8 16H8z" opacity="0.5"/>
                    <path d="M11 28l5-10 5 10H11z" opacity="0.8"/>
                </svg>
                <span class="font-display text-xl font-bold text-brand-950">Summit Roasters</span>
            </a>

            <!-- Desktop Navigation -->
            <nav class="hidden lg:flex items-center space-x-8" data-testid="header-nav">
                <a asp-controller="Products" asp-action="Index" class="text-brand-950 hover:text-brand-500 font-medium transition-colors" data-testid="header-nav-shop">Shop</a>
                <a href="/products?category=SingleOrigin" class="text-brand-950 hover:text-brand-500 font-medium transition-colors" data-testid="header-nav-single-origin">Single Origin</a>
                <a href="/products?category=Blend" class="text-brand-950 hover:text-brand-500 font-medium transition-colors" data-testid="header-nav-blends">Blends</a>
                <a href="/products?category=Equipment" class="text-brand-950 hover:text-brand-500 font-medium transition-colors" data-testid="header-nav-equipment">Equipment</a>
                <a asp-controller="Home" asp-action="About" class="text-brand-950 hover:text-brand-500 font-medium transition-colors" data-testid="header-nav-about">About</a>
            </nav>

            <!-- Right Side Actions -->
            <div class="flex items-center space-x-4">
                <!-- Search Bar -->
                <form asp-controller="Search" asp-action="Index" method="get" class="hidden md:flex items-center" data-testid="header-search-form">
                    <div class="relative">
                        <input type="text" name="q" placeholder="Search coffee..."
                               class="w-48 lg:w-64 pl-10 pr-4 py-2 border border-cream-300 rounded-full text-sm bg-cream-50 focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent transition-all"
                               data-testid="header-search-input" />
                        <svg class="absolute left-3 top-1/2 -translate-y-1/2 h-4 w-4 text-brand-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                        </svg>
                    </div>
                </form>

                <!-- Cart Icon -->
                <a asp-controller="Cart" asp-action="Index" class="relative p-2 text-brand-950 hover:text-brand-500 transition-colors" data-testid="header-cart-link">
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 100 4 2 2 0 000-4z"/>
                    </svg>
                    <span id="cart-badge" class="absolute -top-1 -right-1 bg-brand-500 text-white text-xs font-bold rounded-full h-5 w-5 flex items-center justify-center hidden" data-testid="header-cart-badge">0</span>
                </a>

                <!-- User Menu -->
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <div class="relative hidden md:block" data-testid="header-user-menu">
                        <button id="user-menu-button" class="flex items-center space-x-1 p-2 text-brand-950 hover:text-brand-500 transition-colors" data-testid="header-user-menu-toggle">
                            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                            </svg>
                            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                            </svg>
                        </button>
                        <div id="user-menu-dropdown" class="hidden absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-cream-200 py-1 z-50" data-testid="header-user-dropdown">
                            <a asp-controller="Account" asp-action="Orders" class="block px-4 py-2 text-sm text-brand-950 hover:bg-cream-50" data-testid="header-user-orders">Orders</a>
                            <a asp-controller="Account" asp-action="Settings" class="block px-4 py-2 text-sm text-brand-950 hover:bg-cream-50" data-testid="header-user-settings">Settings</a>
                            @if (User.IsInRole("Admin"))
                            {
                                <hr class="my-1 border-cream-200" />
                                <a asp-controller="Admin" asp-action="Index" class="block px-4 py-2 text-sm text-brand-500 font-medium hover:bg-cream-50" data-testid="header-user-admin">Admin</a>
                            }
                            <hr class="my-1 border-cream-200" />
                            <form asp-controller="Account" asp-action="Logout" method="post">
                                <button type="submit" class="block w-full text-left px-4 py-2 text-sm text-brand-950 hover:bg-cream-50" data-testid="header-user-logout">Logout</button>
                            </form>
                        </div>
                    </div>
                }
                else
                {
                    <div class="hidden md:flex items-center space-x-3" data-testid="header-auth-links">
                        <a asp-controller="Account" asp-action="Login" class="text-sm font-medium text-brand-950 hover:text-brand-500 transition-colors" data-testid="header-login-link">Login</a>
                        <a asp-controller="Account" asp-action="Register" class="text-sm font-medium bg-brand-500 text-white px-4 py-2 rounded-full hover:bg-brand-600 transition-colors" data-testid="header-register-link">Register</a>
                    </div>
                }

                <!-- Mobile Menu Toggle -->
                <button id="mobile-menu-toggle" class="lg:hidden p-2 text-brand-950 hover:text-brand-500 transition-colors" data-testid="header-mobile-menu-toggle" aria-label="Open mobile menu">
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                    </svg>
                </button>
            </div>
        </div>
    </div>
</header>
