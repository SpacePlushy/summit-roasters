@model double

@{
    var fullStars = (int)Math.Floor(Model);
    var hasHalfStar = (Model - fullStars) >= 0.25 && (Model - fullStars) < 0.75;
    var adjustedFullStars = (Model - fullStars) >= 0.75 ? fullStars + 1 : fullStars;
    var emptyStars = 5 - adjustedFullStars - (hasHalfStar ? 1 : 0);
}

<div class="flex items-center" aria-label="Rating: @Model.ToString("F1") out of 5 stars" data-testid="rating-stars">
    @for (var i = 0; i < adjustedFullStars; i++)
    {
        <svg class="h-4 w-4 text-amber-400" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
        </svg>
    }
    @if (hasHalfStar)
    {
        <svg class="h-4 w-4 text-amber-400" viewBox="0 0 20 20">
            <defs>
                <linearGradient id="halfGrad-@Guid.NewGuid().ToString("N").Substring(0,8)">
                    <stop offset="50%" stop-color="currentColor"/>
                    <stop offset="50%" stop-color="#d1d5db"/>
                </linearGradient>
            </defs>
            <path fill="url(#halfGrad-@Guid.NewGuid().ToString("N").Substring(0,8))" d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
        </svg>
    }
    @for (var i = 0; i < emptyStars; i++)
    {
        <svg class="h-4 w-4 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
        </svg>
    }
</div>
