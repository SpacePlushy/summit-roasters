<!-- Toast Notification Container -->
<div id="toast-container" class="fixed bottom-4 right-4 z-50 flex flex-col space-y-3 pointer-events-none" data-testid="toast-container">
    <!-- Toast notifications will be dynamically inserted here by JavaScript -->
</div>

<!-- Toast Template (hidden, cloned by JS) -->
<template id="toast-template">
    <div class="toast pointer-events-auto max-w-sm w-full bg-white rounded-xl shadow-lg border border-cream-200 overflow-hidden transform transition-all duration-300 translate-x-full opacity-0" role="alert" data-testid="toast-notification">
        <div class="p-4 flex items-start space-x-3">
            <!-- Icon container -->
            <div class="flex-shrink-0 toast-icon">
                <!-- Success icon -->
                <svg class="toast-icon-success hidden h-5 w-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <!-- Error icon -->
                <svg class="toast-icon-error hidden h-5 w-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
                <!-- Info icon -->
                <svg class="toast-icon-info hidden h-5 w-5 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                </svg>
            </div>
            <!-- Content -->
            <div class="flex-1 min-w-0">
                <p class="toast-title text-sm font-semibold text-brand-950"></p>
                <p class="toast-message text-sm text-brand-400 mt-0.5"></p>
            </div>
            <!-- Close button -->
            <button class="toast-close flex-shrink-0 p-1 text-brand-400 hover:text-brand-950 transition-colors" data-testid="toast-close">
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                </svg>
            </button>
        </div>
    </div>
</template>
