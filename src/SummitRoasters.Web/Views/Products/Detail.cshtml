@model ProductDetailViewModel
@{
    ViewData["Title"] = Model.Name;
    ViewData["Breadcrumbs"] = new List<(string Label, string Url)>
    {
        ("Shop", Url.Action("Index", "Products") ?? ""),
        (Model.Name, "")
    };
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 lg:py-12">
    @await Html.PartialAsync("_Breadcrumb")

    <!-- Product Detail -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 mb-16" data-testid="product-detail">
        <!-- Product Image -->
        <div class="aspect-square bg-cream-100 rounded-2xl overflow-hidden" data-testid="product-detail-image">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="@Model.Name" class="w-full h-full object-cover" />
            }
            else
            {
                <div class="w-full h-full flex items-center justify-center">
                    <svg class="h-24 w-24 text-cream-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                </div>
            }
        </div>

        <!-- Product Info -->
        <div>
            <!-- Category & Roast -->
            <div class="flex items-center gap-2 mb-3">
                <span class="text-xs font-medium bg-cream-100 text-brand-600 px-2.5 py-1 rounded-full" data-testid="product-detail-category">@Model.Category</span>
                @if (Model.RoastLevel.HasValue)
                {
                    <span class="text-xs font-medium bg-brand-500 text-white px-2.5 py-1 rounded-full" data-testid="product-detail-roast">@Model.RoastLevel Roast</span>
                }
            </div>

            <!-- Name -->
            <h1 class="font-display text-3xl lg:text-4xl font-bold text-brand-950" data-testid="product-detail-name">@Model.Name</h1>

            <!-- Rating -->
            @if (Model.AverageRating > 0)
            {
                <div class="flex items-center mt-3 space-x-2" data-testid="product-detail-rating">
                    @await Html.PartialAsync("_RatingStars", Model.AverageRating)
                    <span class="text-sm text-brand-400">(@Model.ReviewCount reviews)</span>
                </div>
            }

            <!-- Price -->
            <div class="mt-4 flex items-center space-x-3" data-testid="product-detail-price">
                <span class="text-3xl font-bold text-brand-500">$@Model.Price.ToString("F2")</span>
                @if (Model.CompareAtPrice.HasValue && Model.CompareAtPrice > Model.Price)
                {
                    <span class="text-lg text-brand-400 line-through">$@Model.CompareAtPrice.Value.ToString("F2")</span>
                    <span class="text-sm font-medium text-green-700 bg-green-50 px-2 py-0.5 rounded-full">
                        Save $@((Model.CompareAtPrice.Value - Model.Price).ToString("F2"))
                    </span>
                }
            </div>

            <!-- Description -->
            <p class="mt-4 text-brand-600 leading-relaxed" data-testid="product-detail-description">@Model.Description</p>

            <hr class="my-6 border-cream-200" />

            <!-- Add to Cart Form -->
            <form id="add-to-cart-form" data-testid="product-detail-form">
                <input type="hidden" name="productId" value="@Model.Id" />

                <!-- Weight Options -->
                @if (Model.WeightOptions != null && Model.WeightOptions.Any())
                {
                    <div class="mb-5">
                        <label class="block text-sm font-medium text-brand-950 mb-2">Weight</label>
                        <div class="flex flex-wrap gap-2" data-testid="product-detail-weight-options">
                            @foreach (var weight in Model.WeightOptions)
                            {
                                <button type="button"
                                        class="weight-option px-4 py-2 border-2 rounded-lg text-sm font-medium transition-colors @(weight == Model.WeightOptions.First() ? "border-brand-500 bg-brand-50 text-brand-500" : "border-cream-300 text-brand-950 hover:border-brand-500")"
                                        data-weight="@weight.Weight"
                                        data-testid="weight-option-@weight.Weight.ToLowerInvariant().Replace(" ", "-")">
                                    @weight.Weight
                                </button>
                            }
                        </div>
                        <input type="hidden" name="weight" id="selected-weight" value="@Model.WeightOptions.FirstOrDefault()?.Weight" />
                    </div>
                }

                <!-- Grind Selector -->
                @if (Model.GrindOptions != null && Model.GrindOptions.Any())
                {
                    <div class="mb-5">
                        <label for="grind-select" class="block text-sm font-medium text-brand-950 mb-2">Grind</label>
                        <select id="grind-select" name="grindType"
                                class="w-full px-4 py-2.5 border border-cream-300 rounded-lg text-sm bg-white focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent"
                                data-testid="grind-select">
                            @foreach (var grind in Model.GrindOptions)
                            {
                                <option value="@grind">@grind</option>
                            }
                        </select>
                    </div>
                }

                <!-- Quantity -->
                <div class="mb-6">
                    <label for="quantity-input" class="block text-sm font-medium text-brand-950 mb-2">Quantity</label>
                    <div class="flex items-center border border-cream-300 rounded-lg w-fit">
                        <button type="button" id="quantity-decrease" class="px-4 py-2.5 text-brand-950 hover:text-brand-500 hover:bg-cream-50 transition-colors rounded-l-lg" data-testid="quantity-decrease">
                            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"/>
                            </svg>
                        </button>
                        <input type="number" id="quantity-input" name="quantity" value="1" min="1" max="99"
                               class="w-16 text-center text-sm font-medium border-x border-cream-300 py-2.5 focus:outline-none"
                               data-testid="quantity-input" />
                        <button type="button" id="quantity-increase" class="px-4 py-2.5 text-brand-950 hover:text-brand-500 hover:bg-cream-50 transition-colors rounded-r-lg" data-testid="quantity-increase">
                            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                            </svg>
                        </button>
                    </div>
                </div>

                <!-- Add to Cart Button -->
                @if (Model.StockQuantity > 0)
                {
                    <button type="submit" class="w-full bg-brand-500 text-white font-semibold py-3.5 px-8 rounded-full hover:bg-brand-600 transition-colors text-base flex items-center justify-center space-x-2" data-product-id="@Model.Id" data-testid="add-to-cart-button">
                        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 100 4 2 2 0 000-4z"/>
                        </svg>
                        <span>Add to Cart</span>
                    </button>
                }
                else
                {
                    <button type="button" disabled class="w-full bg-gray-300 text-gray-500 font-semibold py-3.5 px-8 rounded-full cursor-not-allowed text-base" data-testid="add-to-cart-button-disabled">
                        Out of Stock
                    </button>
                }
            </form>

            <!-- Stock Status -->
            <div class="mt-4 text-center" data-testid="product-detail-stock">
                @if (Model.StockQuantity > 10)
                {
                    <span class="inline-flex items-center text-sm text-green-700">
                        <span class="w-2 h-2 bg-green-500 rounded-full mr-2"></span>
                        In Stock
                    </span>
                }
                else if (Model.StockQuantity > 0)
                {
                    <span class="inline-flex items-center text-sm text-amber-700">
                        <span class="w-2 h-2 bg-amber-500 rounded-full mr-2"></span>
                        Only @Model.StockQuantity left in stock
                    </span>
                }
            </div>
        </div>
    </div>

    <!-- Tabs Section -->
    <div class="mb-16" data-testid="product-tabs">
        <!-- Tab Navigation -->
        <div class="border-b border-cream-200">
            <nav class="flex space-x-8" aria-label="Product information tabs">
                <button class="product-tab active py-4 px-1 border-b-2 border-brand-500 text-brand-500 font-medium text-sm transition-colors" data-tab="description" data-testid="product-tab-description">
                    Description
                </button>
                <button class="product-tab py-4 px-1 border-b-2 border-transparent text-brand-400 hover:text-brand-950 hover:border-cream-300 font-medium text-sm transition-colors" data-tab="reviews" data-testid="product-tab-reviews">
                    Reviews (@Model.ReviewCount)
                </button>
                <button class="product-tab py-4 px-1 border-b-2 border-transparent text-brand-400 hover:text-brand-950 hover:border-cream-300 font-medium text-sm transition-colors" data-tab="brewing" data-testid="product-tab-brewing">
                    Brewing Tips
                </button>
            </nav>
        </div>

        <!-- Tab Content: Description -->
        <div id="tab-description" class="product-tab-content py-8" data-testid="product-tab-content-description">
            <div class="prose max-w-none">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <div>
                        <h3 class="font-display text-xl font-semibold text-brand-950 mb-4">About This Coffee</h3>
                        <p class="text-brand-600 leading-relaxed">@Model.FullDescription</p>
                    </div>
                    <div>
                        <h3 class="font-display text-xl font-semibold text-brand-950 mb-4">Details</h3>
                        <dl class="space-y-3">
                            @if (!string.IsNullOrEmpty(Model.Origin))
                            {
                                <div class="flex justify-between py-2 border-b border-cream-200">
                                    <dt class="text-sm text-brand-400">Origin</dt>
                                    <dd class="text-sm font-medium text-brand-950">@Model.Origin</dd>
                                </div>
                            }
                            @if (Model.RoastLevel.HasValue)
                            {
                                <div class="flex justify-between py-2 border-b border-cream-200">
                                    <dt class="text-sm text-brand-400">Roast Level</dt>
                                    <dd class="text-sm font-medium text-brand-950">@Model.RoastLevel</dd>
                                </div>
                            }
                            @if (Model.FlavorNotes != null && Model.FlavorNotes.Any())
                            {
                                <div class="flex justify-between py-2 border-b border-cream-200">
                                    <dt class="text-sm text-brand-400">Flavor Notes</dt>
                                    <dd class="text-sm font-medium text-brand-950">@string.Join(", ", Model.FlavorNotes)</dd>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Model.ProcessMethod))
                            {
                                <div class="flex justify-between py-2 border-b border-cream-200">
                                    <dt class="text-sm text-brand-400">Process</dt>
                                    <dd class="text-sm font-medium text-brand-950">@Model.ProcessMethod</dd>
                                </div>
                            }
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tab Content: Reviews -->
        <div id="tab-reviews" class="product-tab-content py-8 hidden" data-testid="product-tab-content-reviews">
            <!-- Review Summary -->
            <div class="bg-white rounded-xl border border-cream-200 p-6 mb-8" data-testid="reviews-summary">
                <div class="flex flex-col sm:flex-row items-center gap-6">
                    <div class="text-center">
                        <div class="text-4xl font-bold text-brand-950">@Model.AverageRating.ToString("F1")</div>
                        <div class="mt-1">
                            @await Html.PartialAsync("_RatingStars", Model.AverageRating)
                        </div>
                        <p class="text-sm text-brand-400 mt-1">Based on @Model.ReviewCount reviews</p>
                    </div>
                    <div class="flex-1 w-full">
                        @for (int star = 5; star >= 1; star--)
                        {
                            var count = Model.RatingDistribution?.GetValueOrDefault(star) ?? 0;
                            var percentage = Model.ReviewCount > 0 ? (double)count / Model.ReviewCount * 100 : 0;
                            <div class="flex items-center space-x-2 mb-1">
                                <span class="text-xs text-brand-400 w-8">@star star</span>
                                <div class="flex-1 bg-cream-200 rounded-full h-2">
                                    <div class="bg-amber-400 rounded-full h-2" style="width: @percentage%"></div>
                                </div>
                                <span class="text-xs text-brand-400 w-8">@count</span>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Reviews List -->
            <div class="space-y-4" data-testid="reviews-list">
                @if (Model.Reviews != null && Model.Reviews.Any())
                {
                    @foreach (var review in Model.Reviews)
                    {
                        @await Html.PartialAsync("_ReviewCard", review)
                    }
                }
                else
                {
                    <p class="text-center text-brand-400 py-8">No reviews yet. Be the first to share your experience!</p>
                }
            </div>

            <!-- Write Review Form -->
            @if (Model.CanReview)
            {
                <div class="mt-8 bg-white rounded-xl border border-cream-200 p-6" data-testid="review-form">
                    <h3 class="font-display text-xl font-semibold text-brand-950 mb-4">Write a Review</h3>
                    <form asp-controller="Products" asp-action="SubmitReview" method="post">
                        <input type="hidden" name="productId" value="@Model.Id" />

                        <!-- Rating -->
                        <div class="mb-4">
                            <label class="block text-sm font-medium text-brand-950 mb-2">Your Rating</label>
                            <div class="flex space-x-1" id="review-rating-selector" data-testid="review-form-rating">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <button type="button" class="review-star p-1 text-gray-300 hover:text-amber-400 transition-colors" data-rating="@i" data-testid="review-form-star-@i">
                                        <svg class="h-7 w-7" fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                                        </svg>
                                    </button>
                                }
                            </div>
                            <input type="hidden" name="rating" id="review-rating-value" value="0" />
                        </div>

                        <!-- Title -->
                        <div class="mb-4">
                            <label for="review-title" class="block text-sm font-medium text-brand-950 mb-2">Review Title</label>
                            <input type="text" id="review-title" name="title" placeholder="Summarize your experience"
                                   class="w-full px-4 py-2.5 border border-cream-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent"
                                   data-testid="review-form-title" />
                        </div>

                        <!-- Body -->
                        <div class="mb-4">
                            <label for="review-body" class="block text-sm font-medium text-brand-950 mb-2">Your Review</label>
                            <textarea id="review-body" name="body" rows="4" placeholder="What did you think of this coffee?"
                                      class="w-full px-4 py-2.5 border border-cream-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent resize-none"
                                      data-testid="review-form-body"></textarea>
                        </div>

                        <button type="submit" class="bg-brand-500 text-white font-medium py-2.5 px-6 rounded-full hover:bg-brand-600 transition-colors text-sm" data-testid="review-form-submit">
                            Submit Review
                        </button>
                    </form>
                </div>
            }
        </div>

        <!-- Tab Content: Brewing Tips -->
        <div id="tab-brewing" class="product-tab-content py-8 hidden" data-testid="product-tab-content-brewing">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <div class="bg-white rounded-xl border border-cream-200 p-6">
                    <h3 class="font-display text-lg font-semibold text-brand-950 mb-4">Pour Over</h3>
                    <dl class="space-y-3 text-sm">
                        <div class="flex justify-between py-1.5 border-b border-cream-100">
                            <dt class="text-brand-400">Coffee</dt>
                            <dd class="font-medium text-brand-950">20g</dd>
                        </div>
                        <div class="flex justify-between py-1.5 border-b border-cream-100">
                            <dt class="text-brand-400">Water</dt>
                            <dd class="font-medium text-brand-950">320g (205&deg;F)</dd>
                        </div>
                        <div class="flex justify-between py-1.5 border-b border-cream-100">
                            <dt class="text-brand-400">Grind</dt>
                            <dd class="font-medium text-brand-950">Medium-Fine</dd>
                        </div>
                        <div class="flex justify-between py-1.5">
                            <dt class="text-brand-400">Brew Time</dt>
                            <dd class="font-medium text-brand-950">3:00 - 3:30</dd>
                        </div>
                    </dl>
                </div>
                <div class="bg-white rounded-xl border border-cream-200 p-6">
                    <h3 class="font-display text-lg font-semibold text-brand-950 mb-4">French Press</h3>
                    <dl class="space-y-3 text-sm">
                        <div class="flex justify-between py-1.5 border-b border-cream-100">
                            <dt class="text-brand-400">Coffee</dt>
                            <dd class="font-medium text-brand-950">30g</dd>
                        </div>
                        <div class="flex justify-between py-1.5 border-b border-cream-100">
                            <dt class="text-brand-400">Water</dt>
                            <dd class="font-medium text-brand-950">500g (200&deg;F)</dd>
                        </div>
                        <div class="flex justify-between py-1.5 border-b border-cream-100">
                            <dt class="text-brand-400">Grind</dt>
                            <dd class="font-medium text-brand-950">Coarse</dd>
                        </div>
                        <div class="flex justify-between py-1.5">
                            <dt class="text-brand-400">Brew Time</dt>
                            <dd class="font-medium text-brand-950">4:00</dd>
                        </div>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <!-- Related Products -->
    @if (Model.RelatedProducts != null && Model.RelatedProducts.Any())
    {
        <section class="mb-16" data-testid="related-products-section">
            <h2 class="font-display text-2xl font-bold text-brand-950 mb-6">You Might Also Like</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                @foreach (var related in Model.RelatedProducts)
                {
                    @await Html.PartialAsync("_ProductCard", related)
                }
            </div>
        </section>
    }
</div>

@section Scripts {
    <script src="~/js/product-detail.js"></script>
    <script src="~/js/review-form.js"></script>
}
