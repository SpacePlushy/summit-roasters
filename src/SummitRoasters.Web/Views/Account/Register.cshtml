@model RegisterViewModel
@{
    ViewData["Title"] = "Create Account";
}

<div class="min-h-[70vh] flex items-center justify-center px-4 py-12">
    <div class="w-full max-w-md">
        <div class="text-center mb-8">
            <a asp-controller="Home" asp-action="Index" class="inline-flex items-center space-x-2 mb-6">
                <svg class="h-8 w-8 text-brand-500" viewBox="0 0 32 32" fill="currentColor" aria-hidden="true">
                    <path d="M16 2L6 18h6l-2 12 14-16h-6l4-12z"/>
                    <path d="M4 28L16 8l12 20H4z" opacity="0.3"/>
                    <path d="M8 28L16 12l8 16H8z" opacity="0.5"/>
                    <path d="M11 28l5-10 5 10H11z" opacity="0.8"/>
                </svg>
                <span class="font-display text-xl font-bold text-brand-950">Summit Roasters</span>
            </a>
            <h1 class="font-display text-3xl font-bold text-brand-950">Create your account</h1>
            <p class="mt-2 text-brand-400">Join the Summit Roasters community</p>
        </div>

        <div class="bg-white rounded-2xl border border-cream-200 shadow-sm p-8" data-testid="register-form">
            <form asp-controller="Account" asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm mb-4"></div>

                <!-- Name Fields -->
                <div class="grid grid-cols-2 gap-4 mb-5">
                    <div>
                        <label asp-for="FirstName" class="block text-sm font-medium text-brand-950 mb-2">First Name</label>
                        <input asp-for="FirstName" type="text" placeholder="John"
                               class="w-full px-4 py-2.5 border border-cream-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent"
                               data-testid="register-first-name" />
                        <span asp-validation-for="FirstName" class="text-red-500 text-xs mt-1"></span>
                    </div>
                    <div>
                        <label asp-for="LastName" class="block text-sm font-medium text-brand-950 mb-2">Last Name</label>
                        <input asp-for="LastName" type="text" placeholder="Doe"
                               class="w-full px-4 py-2.5 border border-cream-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent"
                               data-testid="register-last-name" />
                        <span asp-validation-for="LastName" class="text-red-500 text-xs mt-1"></span>
                    </div>
                </div>

                <!-- Email -->
                <div class="mb-5">
                    <label asp-for="Email" class="block text-sm font-medium text-brand-950 mb-2">Email Address</label>
                    <input asp-for="Email" type="email" placeholder="you@example.com"
                           class="w-full px-4 py-2.5 border border-cream-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent"
                           data-testid="register-email" />
                    <span asp-validation-for="Email" class="text-red-500 text-xs mt-1"></span>
                </div>

                <!-- Password -->
                <div class="mb-5">
                    <label asp-for="Password" class="block text-sm font-medium text-brand-950 mb-2">Password</label>
                    <input asp-for="Password" type="password" placeholder="At least 8 characters"
                           class="w-full px-4 py-2.5 border border-cream-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent"
                           data-testid="register-password" />
                    <span asp-validation-for="Password" class="text-red-500 text-xs mt-1"></span>
                </div>

                <!-- Confirm Password -->
                <div class="mb-6">
                    <label asp-for="ConfirmPassword" class="block text-sm font-medium text-brand-950 mb-2">Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" placeholder="Re-enter your password"
                           class="w-full px-4 py-2.5 border border-cream-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent"
                           data-testid="register-confirm-password" />
                    <span asp-validation-for="ConfirmPassword" class="text-red-500 text-xs mt-1"></span>
                </div>

                <!-- Submit -->
                <button type="submit" class="w-full bg-brand-500 text-white font-semibold py-3 px-4 rounded-full hover:bg-brand-600 transition-colors" data-testid="register-submit">
                    Create Account
                </button>
            </form>
        </div>

        <p class="mt-6 text-center text-sm text-brand-400">
            Already have an account?
            <a asp-controller="Account" asp-action="Login" class="font-medium text-brand-500 hover:text-brand-600 transition-colors" data-testid="register-login-link">Sign in</a>
        </p>
    </div>
</div>
