@model AccountSettingsViewModel
@{
    ViewData["Title"] = "Account Settings";
    ViewData["Breadcrumbs"] = new List<(string Label, string Url)>
    {
        ("My Account", ""),
        ("Settings", "")
    };
}

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8 lg:py-12">
    @await Html.PartialAsync("_Breadcrumb")

    <h1 class="font-display text-3xl lg:text-4xl font-bold text-brand-950 mb-8" data-testid="settings-heading">Account Settings</h1>

    <!-- Profile Form -->
    <div class="bg-white rounded-xl border border-cream-200 p-6 lg:p-8 mb-8" data-testid="settings-profile">
        <h2 class="font-display text-xl font-semibold text-brand-950 mb-6">Profile Information</h2>
        <form asp-controller="Account" asp-action="UpdateProfile" method="post" data-testid="settings-profile-form">
            <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm mb-4"></div>

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-5 mb-5">
                <div>
                    <label asp-for="FirstName" class="block text-sm font-medium text-brand-950 mb-2">First Name</label>
                    <input asp-for="FirstName" type="text"
                           class="w-full px-4 py-2.5 border border-cream-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent"
                           data-testid="settings-first-name" />
                    <span asp-validation-for="FirstName" class="text-red-500 text-xs mt-1"></span>
                </div>
                <div>
                    <label asp-for="LastName" class="block text-sm font-medium text-brand-950 mb-2">Last Name</label>
                    <input asp-for="LastName" type="text"
                           class="w-full px-4 py-2.5 border border-cream-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent"
                           data-testid="settings-last-name" />
                    <span asp-validation-for="LastName" class="text-red-500 text-xs mt-1"></span>
                </div>
            </div>

            <div class="mb-6">
                <label asp-for="Email" class="block text-sm font-medium text-brand-950 mb-2">Email Address</label>
                <input asp-for="Email" type="email"
                       class="w-full px-4 py-2.5 border border-cream-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent"
                       data-testid="settings-email" />
                <span asp-validation-for="Email" class="text-red-500 text-xs mt-1"></span>
            </div>

            <button type="submit" class="bg-brand-500 text-white font-medium py-2.5 px-6 rounded-full hover:bg-brand-600 transition-colors text-sm" data-testid="settings-profile-save">
                Save Changes
            </button>
        </form>
    </div>

    <!-- Saved Addresses -->
    <div class="bg-white rounded-xl border border-cream-200 p-6 lg:p-8" data-testid="settings-addresses">
        <div class="flex items-center justify-between mb-6">
            <h2 class="font-display text-xl font-semibold text-brand-950">Saved Addresses</h2>
            <button type="button" id="add-address-toggle" class="inline-flex items-center text-sm font-medium text-brand-500 hover:text-brand-600 transition-colors" data-testid="settings-add-address-toggle">
                <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
                Add Address
            </button>
        </div>

        <!-- Add Address Form (hidden by default) -->
        <div id="add-address-form" class="hidden mb-6 p-5 bg-cream-50 rounded-lg border border-cream-200" data-testid="settings-add-address-form">
            <h3 class="font-medium text-brand-950 mb-4">New Address</h3>
            <form asp-controller="Account" asp-action="AddAddress" method="post">
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-4">
                    <div>
                        <label class="block text-sm font-medium text-brand-950 mb-1">Full Name</label>
                        <input type="text" name="FullName" class="w-full px-3 py-2 border border-cream-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-brand-500" data-testid="settings-address-fullname" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-brand-950 mb-1">Phone</label>
                        <input type="tel" name="Phone" class="w-full px-3 py-2 border border-cream-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-brand-500" data-testid="settings-address-phone" />
                    </div>
                </div>
                <div class="mb-4">
                    <label class="block text-sm font-medium text-brand-950 mb-1">Street Address</label>
                    <input type="text" name="Street" class="w-full px-3 py-2 border border-cream-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-brand-500" data-testid="settings-address-street" />
                </div>
                <div class="mb-4">
                    <label class="block text-sm font-medium text-brand-950 mb-1">Apt / Suite (optional)</label>
                    <input type="text" name="Street2" class="w-full px-3 py-2 border border-cream-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-brand-500" data-testid="settings-address-street2" />
                </div>
                <div class="grid grid-cols-2 sm:grid-cols-3 gap-4 mb-4">
                    <div>
                        <label class="block text-sm font-medium text-brand-950 mb-1">City</label>
                        <input type="text" name="City" class="w-full px-3 py-2 border border-cream-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-brand-500" data-testid="settings-address-city" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-brand-950 mb-1">State</label>
                        <input type="text" name="State" class="w-full px-3 py-2 border border-cream-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-brand-500" data-testid="settings-address-state" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-brand-950 mb-1">ZIP Code</label>
                        <input type="text" name="ZipCode" class="w-full px-3 py-2 border border-cream-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-brand-500" data-testid="settings-address-zip" />
                    </div>
                </div>
                <div class="flex items-center space-x-3">
                    <button type="submit" class="bg-brand-500 text-white font-medium py-2 px-5 rounded-full hover:bg-brand-600 transition-colors text-sm" data-testid="settings-address-save">
                        Save Address
                    </button>
                    <button type="button" id="add-address-cancel" class="text-brand-400 hover:text-brand-950 font-medium py-2 px-5 rounded-full text-sm transition-colors" data-testid="settings-address-cancel">
                        Cancel
                    </button>
                </div>
            </form>
        </div>

        <!-- Address List -->
        @if (Model.Addresses != null && Model.Addresses.Any())
        {
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4" data-testid="settings-addresses-list">
                @foreach (var address in Model.Addresses)
                {
                    <div class="border border-cream-200 rounded-lg p-4 relative" data-testid="settings-address-card-@address.Id">
                        @if (address.IsDefault)
                        {
                            <span class="absolute top-3 right-3 text-xs font-medium bg-brand-50 text-brand-500 px-2 py-0.5 rounded-full">Default</span>
                        }
                        <address class="not-italic text-sm text-brand-600 leading-relaxed">
                            <p class="font-medium text-brand-950">@address.FullName</p>
                            <p>@address.Street</p>
                            @if (!string.IsNullOrEmpty(address.Street2))
                            {
                                <p>@address.Street2</p>
                            }
                            <p>@address.City, @address.State @address.ZipCode</p>
                        </address>
                        <div class="mt-3 flex items-center space-x-3">
                            <form asp-controller="Account" asp-action="DeleteAddress" asp-route-id="@address.Id" method="post" class="inline">
                                <button type="submit" class="text-xs text-red-500 hover:text-red-700 transition-colors" data-testid="settings-address-delete-@address.Id">Delete</button>
                            </form>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-sm text-brand-400 text-center py-6">No saved addresses yet.</p>
        }
    </div>
</div>
