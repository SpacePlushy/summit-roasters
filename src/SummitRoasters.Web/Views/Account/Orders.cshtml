@model OrderHistoryViewModel
@{
    ViewData["Title"] = "My Orders";
    ViewData["Breadcrumbs"] = new List<(string Label, string Url)>
    {
        ("My Account", Url.Action("Settings", "Account") ?? ""),
        ("Orders", "")
    };
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 lg:py-12">
    @await Html.PartialAsync("_Breadcrumb")

    <h1 class="font-display text-3xl lg:text-4xl font-bold text-brand-950 mb-8" data-testid="order-history-heading">My Orders</h1>

    @if (Model.Orders != null && Model.Orders.Any())
    {
        <div class="space-y-4" data-testid="order-history-list">
            @foreach (var order in Model.Orders)
            {
                <a asp-controller="Account" asp-action="OrderDetail" asp-route-id="@order.Id"
                   class="block bg-white rounded-xl border border-cream-200 p-6 hover:shadow-md transition-shadow"
                   data-testid="order-history-item-@order.OrderNumber">
                    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                        <div class="flex-1">
                            <div class="flex items-center space-x-3 mb-2">
                                <h3 class="font-display text-lg font-semibold text-brand-950" data-testid="order-history-number-@order.OrderNumber">
                                    Order #@order.OrderNumber
                                </h3>
                                @{
                                    var statusColors = order.Status switch
                                    {
                                        "Pending" => "bg-yellow-50 text-yellow-700",
                                        "Processing" => "bg-blue-50 text-blue-700",
                                        "Shipped" => "bg-purple-50 text-purple-700",
                                        "Delivered" => "bg-green-50 text-green-700",
                                        "Cancelled" => "bg-red-50 text-red-700",
                                        _ => "bg-gray-50 text-gray-700"
                                    };
                                }
                                <span class="text-xs font-medium px-2.5 py-1 rounded-full @statusColors" data-testid="order-history-status-@order.OrderNumber">
                                    @order.Status
                                </span>
                            </div>
                            <div class="flex flex-wrap gap-x-6 gap-y-1 text-sm text-brand-400">
                                <span data-testid="order-history-date-@order.OrderNumber">
                                    <svg class="h-4 w-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                    </svg>
                                    @order.OrderDate.ToString("MMM d, yyyy")
                                </span>
                                <span data-testid="order-history-items-@order.OrderNumber">
                                    @order.ItemCount item@(order.ItemCount != 1 ? "s" : "")
                                </span>
                            </div>
                        </div>
                        <div class="text-right">
                            <p class="text-xl font-bold text-brand-500" data-testid="order-history-total-@order.OrderNumber">
                                $@order.Total.ToString("F2")
                            </p>
                            <span class="text-sm text-brand-400 flex items-center justify-end mt-1">
                                View Details
                                <svg class="h-4 w-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                                </svg>
                            </span>
                        </div>
                    </div>
                </a>
            }
        </div>

        @if (Model.Pagination != null)
        {
            @await Html.PartialAsync("_Pagination", Model.Pagination)
        }
    }
    else
    {
        {
            ViewData["EmptyStateIcon"] = "orders";
            ViewData["EmptyStateTitle"] = "No orders yet";
            ViewData["EmptyStateMessage"] = "You haven't placed any orders yet. Start exploring our collection of freshly roasted coffee.";
            ViewData["EmptyStateActionText"] = "Start Shopping";
            ViewData["EmptyStateActionUrl"] = Url.Action("Index", "Products") ?? "";
        }
        @await Html.PartialAsync("_EmptyState")
    }
</div>
