@model AdminProductFormViewModel
@{
    ViewData["Title"] = "Add Product";
    Layout = "_AdminLayout";
}

<div class="max-w-4xl">
    <!-- Back Link -->
    <a asp-controller="Admin" asp-action="Products" class="inline-flex items-center text-sm text-brand-400 hover:text-brand-500 transition-colors mb-6" data-testid="admin-product-form-back">
        <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18"/>
        </svg>
        Back to Products
    </a>

    <form asp-controller="Admin" asp-action="CreateProduct" method="post" enctype="multipart/form-data" data-testid="admin-product-form">
        <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm mb-4"></div>

        <div class="space-y-6">
            <!-- Basic Information -->
            <div class="bg-white rounded-xl border border-cream-200 p-6">
                <h2 class="font-display text-lg font-semibold text-brand-950 mb-4">Basic Information</h2>

                <div class="grid grid-cols-1 sm:grid-cols-2 gap-5">
                    <div class="sm:col-span-2">
                        <label asp-for="Name" class="block text-sm font-medium text-brand-950 mb-1">Product Name</label>
                        <input asp-for="Name" type="text" placeholder="e.g., Ethiopian Yirgacheffe"
                               class="w-full px-4 py-2.5 border border-cream-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent"
                               data-testid="admin-product-form-name" />
                        <span asp-validation-for="Name" class="text-red-500 text-xs mt-1"></span>
                    </div>

                    <div class="sm:col-span-2">
                        <label asp-for="Slug" class="block text-sm font-medium text-brand-950 mb-1">URL Slug</label>
                        <input asp-for="Slug" type="text" placeholder="e.g., ethiopian-yirgacheffe"
                               class="w-full px-4 py-2.5 border border-cream-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent"
                               data-testid="admin-product-form-slug" />
                        <span asp-validation-for="Slug" class="text-red-500 text-xs mt-1"></span>
                    </div>

                    <div class="sm:col-span-2">
                        <label asp-for="Description" class="block text-sm font-medium text-brand-950 mb-1">Short Description</label>
                        <textarea asp-for="Description" rows="3" placeholder="Brief product description..."
                                  class="w-full px-4 py-2.5 border border-cream-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent resize-none"
                                  data-testid="admin-product-form-description"></textarea>
                        <span asp-validation-for="Description" class="text-red-500 text-xs mt-1"></span>
                    </div>

                    <div class="sm:col-span-2">
                        <label asp-for="FullDescription" class="block text-sm font-medium text-brand-950 mb-1">Full Description</label>
                        <textarea asp-for="FullDescription" rows="5" placeholder="Detailed product information..."
                                  class="w-full px-4 py-2.5 border border-cream-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent resize-none"
                                  data-testid="admin-product-form-full-description"></textarea>
                    </div>
                </div>
            </div>

            <!-- Category & Classification -->
            <div class="bg-white rounded-xl border border-cream-200 p-6">
                <h2 class="font-display text-lg font-semibold text-brand-950 mb-4">Classification</h2>

                <div class="grid grid-cols-1 sm:grid-cols-2 gap-5">
                    <div>
                        <label asp-for="Category" class="block text-sm font-medium text-brand-950 mb-1">Category</label>
                        <select asp-for="Category" asp-items="Model.CategoryOptions"
                                class="w-full px-4 py-2.5 border border-cream-300 rounded-lg text-sm bg-white focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent"
                                data-testid="admin-product-form-category">
                            <option value="">Select category...</option>
                        </select>
                        <span asp-validation-for="Category" class="text-red-500 text-xs mt-1"></span>
                    </div>

                    <div>
                        <label asp-for="RoastLevel" class="block text-sm font-medium text-brand-950 mb-1">Roast Level</label>
                        <select asp-for="RoastLevel" asp-items="Model.RoastLevelOptions"
                                class="w-full px-4 py-2.5 border border-cream-300 rounded-lg text-sm bg-white focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent"
                                data-testid="admin-product-form-roast-level">
                            <option value="">Select roast level...</option>
                        </select>
                    </div>

                    <div>
                        <label asp-for="Origin" class="block text-sm font-medium text-brand-950 mb-1">Origin</label>
                        <input asp-for="Origin" type="text" placeholder="e.g., Ethiopia, Yirgacheffe"
                               class="w-full px-4 py-2.5 border border-cream-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent"
                               data-testid="admin-product-form-origin" />
                    </div>

                    <div>
                        <label asp-for="ProcessMethod" class="block text-sm font-medium text-brand-950 mb-1">Process Method</label>
                        <input asp-for="ProcessMethod" type="text" placeholder="e.g., Washed, Natural"
                               class="w-full px-4 py-2.5 border border-cream-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent"
                               data-testid="admin-product-form-process" />
                    </div>
                </div>
            </div>

            <!-- Pricing & Inventory -->
            <div class="bg-white rounded-xl border border-cream-200 p-6">
                <h2 class="font-display text-lg font-semibold text-brand-950 mb-4">Pricing & Inventory</h2>

                <div class="grid grid-cols-1 sm:grid-cols-3 gap-5">
                    <div>
                        <label asp-for="Price" class="block text-sm font-medium text-brand-950 mb-1">Price ($)</label>
                        <input asp-for="Price" type="number" step="0.01" min="0" placeholder="0.00"
                               class="w-full px-4 py-2.5 border border-cream-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent"
                               data-testid="admin-product-form-price" />
                        <span asp-validation-for="Price" class="text-red-500 text-xs mt-1"></span>
                    </div>

                    <div>
                        <label asp-for="CompareAtPrice" class="block text-sm font-medium text-brand-950 mb-1">Compare At Price ($)</label>
                        <input asp-for="CompareAtPrice" type="number" step="0.01" min="0" placeholder="0.00"
                               class="w-full px-4 py-2.5 border border-cream-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent"
                               data-testid="admin-product-form-compare-price" />
                    </div>

                    <div>
                        <label asp-for="StockQuantity" class="block text-sm font-medium text-brand-950 mb-1">Stock Quantity</label>
                        <input asp-for="StockQuantity" type="number" min="0" placeholder="0"
                               class="w-full px-4 py-2.5 border border-cream-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent"
                               data-testid="admin-product-form-stock" />
                        <span asp-validation-for="StockQuantity" class="text-red-500 text-xs mt-1"></span>
                    </div>
                </div>
            </div>

            <!-- Flavor Notes -->
            <div class="bg-white rounded-xl border border-cream-200 p-6">
                <h2 class="font-display text-lg font-semibold text-brand-950 mb-4">Flavor Notes</h2>
                <p class="text-sm text-brand-400 mb-3">Press Enter or comma to add a flavor note tag.</p>

                <div id="flavor-notes-container" data-testid="admin-product-form-flavor-notes">
                    <div class="flex flex-wrap gap-2 mb-3" id="flavor-notes-tags" data-testid="admin-product-form-flavor-tags">
                        @if (Model.FlavorNotes != null)
                        {
                            @foreach (var note in Model.FlavorNotes)
                            {
                                <span class="inline-flex items-center bg-brand-50 text-brand-700 text-sm px-3 py-1 rounded-full">
                                    @note
                                    <button type="button" class="ml-1.5 text-brand-400 hover:text-brand-700 remove-flavor-note" aria-label="Remove @note">
                                        <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                                        </svg>
                                    </button>
                                    <input type="hidden" name="FlavorNotes" value="@note" />
                                </span>
                            }
                        }
                    </div>
                    <input type="text" id="flavor-note-input" placeholder="Type a flavor note and press Enter..."
                           class="w-full px-4 py-2.5 border border-cream-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent"
                           data-testid="admin-product-form-flavor-input" />
                </div>
            </div>

            <!-- Image Upload -->
            <div class="bg-white rounded-xl border border-cream-200 p-6">
                <h2 class="font-display text-lg font-semibold text-brand-950 mb-4">Product Image</h2>
                <div class="border-2 border-dashed border-cream-300 rounded-lg p-8 text-center hover:border-brand-500 transition-colors">
                    <input type="file" name="ImageFile" accept="image/*" class="hidden" id="product-image-input" data-testid="admin-product-form-image" />
                    <label for="product-image-input" class="cursor-pointer">
                        <svg class="h-10 w-10 text-cream-400 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                        </svg>
                        <p class="text-sm text-brand-400">Click to upload or drag and drop</p>
                        <p class="text-xs text-cream-400 mt-1">PNG, JPG, WebP up to 5MB</p>
                    </label>
                </div>
            </div>

            <!-- Active Status -->
            <div class="bg-white rounded-xl border border-cream-200 p-6">
                <label class="flex items-center space-x-3 cursor-pointer">
                    <input asp-for="IsActive" type="checkbox"
                           class="h-5 w-5 text-brand-500 border-cream-300 rounded focus:ring-brand-500"
                           data-testid="admin-product-form-active" />
                    <div>
                        <span class="text-sm font-medium text-brand-950">Active</span>
                        <p class="text-xs text-brand-400">Product will be visible on the store</p>
                    </div>
                </label>
            </div>

            <!-- Submit -->
            <div class="flex items-center space-x-4">
                <button type="submit" class="bg-brand-500 text-white font-medium py-2.5 px-6 rounded-lg hover:bg-brand-600 transition-colors text-sm" data-testid="admin-product-form-submit">
                    Create Product
                </button>
                <a asp-controller="Admin" asp-action="Products" class="text-brand-400 hover:text-brand-950 font-medium py-2.5 px-6 rounded-lg text-sm transition-colors" data-testid="admin-product-form-cancel">
                    Cancel
                </a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/js/admin/product-form.js"></script>
}
