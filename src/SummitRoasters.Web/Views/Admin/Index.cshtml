@model AdminDashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_AdminLayout";
}

<!-- Stats Cards -->
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-8" data-testid="admin-dashboard-stats">
    <!-- Total Products -->
    <div class="bg-white rounded-xl border border-cream-200 p-6" data-testid="admin-stat-products">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-brand-400 font-medium">Total Products</p>
                <p class="text-3xl font-bold text-brand-950 mt-1">@Model.TotalProducts</p>
            </div>
            <div class="w-12 h-12 bg-brand-50 rounded-lg flex items-center justify-center">
                <svg class="h-6 w-6 text-brand-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                </svg>
            </div>
        </div>
    </div>

    <!-- Total Orders -->
    <div class="bg-white rounded-xl border border-cream-200 p-6" data-testid="admin-stat-orders">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-brand-400 font-medium">Total Orders</p>
                <p class="text-3xl font-bold text-brand-950 mt-1">@Model.TotalOrders</p>
            </div>
            <div class="w-12 h-12 bg-blue-50 rounded-lg flex items-center justify-center">
                <svg class="h-6 w-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                </svg>
            </div>
        </div>
    </div>

    <!-- Total Revenue -->
    <div class="bg-white rounded-xl border border-cream-200 p-6" data-testid="admin-stat-revenue">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-brand-400 font-medium">Total Revenue</p>
                <p class="text-3xl font-bold text-brand-950 mt-1">$@Model.TotalRevenue.ToString("N2")</p>
            </div>
            <div class="w-12 h-12 bg-green-50 rounded-lg flex items-center justify-center">
                <svg class="h-6 w-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
            </div>
        </div>
    </div>

    <!-- Pending Orders -->
    <div class="bg-white rounded-xl border border-cream-200 p-6" data-testid="admin-stat-pending">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-brand-400 font-medium">Pending Orders</p>
                <p class="text-3xl font-bold text-brand-950 mt-1">@Model.PendingOrders</p>
            </div>
            <div class="w-12 h-12 bg-yellow-50 rounded-lg flex items-center justify-center">
                <svg class="h-6 w-6 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
            </div>
        </div>
    </div>
</div>

<!-- Low Stock Alerts -->
<div class="bg-white rounded-xl border border-cream-200 overflow-hidden" data-testid="admin-low-stock">
    <div class="px-6 py-4 border-b border-cream-200 flex items-center justify-between">
        <h2 class="font-display text-lg font-semibold text-brand-950">Low Stock Alerts</h2>
        <span class="text-xs font-medium bg-red-50 text-red-700 px-2.5 py-1 rounded-full" data-testid="admin-low-stock-count">
            @(Model.LowStockProducts?.Count ?? 0) items
        </span>
    </div>

    @if (Model.LowStockProducts != null && Model.LowStockProducts.Any())
    {
        <div class="overflow-x-auto">
            <table class="w-full" data-testid="admin-low-stock-table">
                <thead>
                    <tr class="bg-cream-50">
                        <th class="px-6 py-3 text-left text-xs font-semibold text-brand-400 uppercase tracking-wider">Product</th>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-brand-400 uppercase tracking-wider">Category</th>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-brand-400 uppercase tracking-wider">Stock</th>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-brand-400 uppercase tracking-wider">Status</th>
                        <th class="px-6 py-3 text-right text-xs font-semibold text-brand-400 uppercase tracking-wider">Action</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-cream-200">
                    @foreach (var product in Model.LowStockProducts)
                    {
                        <tr class="hover:bg-cream-50 transition-colors" data-testid="admin-low-stock-row-@product.Id">
                            <td class="px-6 py-4">
                                <div class="flex items-center space-x-3">
                                    <div class="w-10 h-10 bg-cream-100 rounded-lg flex-shrink-0 overflow-hidden">
                                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                                        {
                                            <img src="@product.ImageUrl" alt="@product.Name" class="w-full h-full object-cover" />
                                        }
                                    </div>
                                    <span class="text-sm font-medium text-brand-950">@product.Name</span>
                                </div>
                            </td>
                            <td class="px-6 py-4 text-sm text-brand-400">@product.Category</td>
                            <td class="px-6 py-4">
                                <span class="text-sm font-bold @(product.StockQuantity == 0 ? "text-red-600" : "text-amber-600")">
                                    @product.StockQuantity
                                </span>
                            </td>
                            <td class="px-6 py-4">
                                @if (product.StockQuantity == 0)
                                {
                                    <span class="inline-flex items-center text-xs font-medium bg-red-50 text-red-700 px-2 py-0.5 rounded-full">Out of Stock</span>
                                }
                                else
                                {
                                    <span class="inline-flex items-center text-xs font-medium bg-amber-50 text-amber-700 px-2 py-0.5 rounded-full">Low Stock</span>
                                }
                            </td>
                            <td class="px-6 py-4 text-right">
                                <a href="/admin/products/edit/@product.Id" class="text-sm text-brand-500 hover:text-brand-600 font-medium transition-colors">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="p-8 text-center">
            <p class="text-brand-400 text-sm">All products are well-stocked!</p>
        </div>
    }
</div>
