@model CheckoutViewModel
@{
    ViewData["Title"] = "Checkout";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 lg:py-12">
    <h1 class="font-display text-3xl lg:text-4xl font-bold text-brand-950 mb-8" data-testid="checkout-heading">Checkout</h1>

    <form asp-controller="Checkout" asp-action="PlaceOrder" method="post" id="checkout-form" data-testid="checkout-form">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Left Column: Steps -->
            <div class="lg:col-span-2 space-y-6">

                <!-- Step 1: Shipping Address -->
                <div class="bg-white rounded-xl border border-cream-200 p-6" id="checkout-step-shipping" data-testid="checkout-shipping">
                    <div class="flex items-center space-x-3 mb-6">
                        <span class="flex items-center justify-center w-8 h-8 rounded-full bg-brand-500 text-white text-sm font-bold">1</span>
                        <h2 class="font-display text-xl font-semibold text-brand-950">Shipping Address</h2>
                    </div>

                    <!-- Saved Addresses -->
                    @if (Model.SavedAddresses != null && Model.SavedAddresses.Any())
                    {
                        <div class="mb-6">
                            <h3 class="text-sm font-medium text-brand-950 mb-3">Saved Addresses</h3>
                            <div class="grid grid-cols-1 sm:grid-cols-2 gap-3" data-testid="checkout-saved-addresses">
                                @foreach (var address in Model.SavedAddresses)
                                {
                                    <label class="relative border-2 border-cream-200 rounded-lg p-4 cursor-pointer hover:border-brand-500 transition-colors has-[:checked]:border-brand-500 has-[:checked]:bg-brand-50">
                                        <input type="radio" name="selectedAddressId" value="@address.Id" class="sr-only" data-testid="checkout-address-@address.Id" />
                                        <address class="not-italic text-sm text-brand-600 leading-relaxed">
                                            <p class="font-medium text-brand-950">@address.FullName</p>
                                            <p>@address.Street</p>
                                            <p>@address.City, @address.State @address.ZipCode</p>
                                        </address>
                                    </label>
                                }
                            </div>
                        </div>

                        <div class="relative flex items-center my-4">
                            <div class="flex-1 border-t border-cream-200"></div>
                            <span class="px-3 text-xs text-brand-400">or enter a new address</span>
                            <div class="flex-1 border-t border-cream-200"></div>
                        </div>
                    }

                    <!-- New Address Form -->
                    <div id="new-address-fields" data-testid="checkout-new-address">
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-4">
                            <div>
                                <label class="block text-sm font-medium text-brand-950 mb-1">Full Name</label>
                                <input type="text" name="ShippingAddress.FullName" value="@Model.ShippingAddress?.FullName"
                                       class="w-full px-4 py-2.5 border border-cream-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent"
                                       data-testid="checkout-shipping-name" />
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-brand-950 mb-1">Phone</label>
                                <input type="tel" name="ShippingAddress.Phone" value="@Model.ShippingAddress?.Phone"
                                       class="w-full px-4 py-2.5 border border-cream-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent"
                                       data-testid="checkout-shipping-phone" />
                            </div>
                        </div>
                        <div class="mb-4">
                            <label class="block text-sm font-medium text-brand-950 mb-1">Street Address</label>
                            <input type="text" name="ShippingAddress.Street" value="@Model.ShippingAddress?.Street"
                                   class="w-full px-4 py-2.5 border border-cream-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent"
                                   data-testid="checkout-shipping-street" />
                        </div>
                        <div class="mb-4">
                            <label class="block text-sm font-medium text-brand-950 mb-1">Apt / Suite (optional)</label>
                            <input type="text" name="ShippingAddress.Street2" value="@Model.ShippingAddress?.Street2"
                                   class="w-full px-4 py-2.5 border border-cream-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent"
                                   data-testid="checkout-shipping-street2" />
                        </div>
                        <div class="grid grid-cols-2 sm:grid-cols-3 gap-4">
                            <div>
                                <label class="block text-sm font-medium text-brand-950 mb-1">City</label>
                                <input type="text" name="ShippingAddress.City" value="@Model.ShippingAddress?.City"
                                       class="w-full px-4 py-2.5 border border-cream-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent"
                                       data-testid="checkout-shipping-city" />
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-brand-950 mb-1">State</label>
                                <input type="text" name="ShippingAddress.State" value="@Model.ShippingAddress?.State"
                                       class="w-full px-4 py-2.5 border border-cream-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent"
                                       data-testid="checkout-shipping-state" />
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-brand-950 mb-1">ZIP Code</label>
                                <input type="text" name="ShippingAddress.ZipCode" value="@Model.ShippingAddress?.ZipCode"
                                       class="w-full px-4 py-2.5 border border-cream-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent"
                                       data-testid="checkout-shipping-zip" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Step 2: Review Order -->
                <div class="bg-white rounded-xl border border-cream-200 p-6" id="checkout-step-review" data-testid="checkout-review">
                    <div class="flex items-center space-x-3 mb-6">
                        <span class="flex items-center justify-center w-8 h-8 rounded-full bg-brand-500 text-white text-sm font-bold">2</span>
                        <h2 class="font-display text-xl font-semibold text-brand-950">Review Your Order</h2>
                    </div>

                    <div class="divide-y divide-cream-200" data-testid="checkout-review-items">
                        @if (Model.Items != null)
                        {
                            @foreach (var item in Model.Items)
                            {
                                <div class="flex items-center gap-4 py-4" data-testid="checkout-review-item-@item.ProductId">
                                    <div class="w-14 h-14 flex-shrink-0 bg-cream-100 rounded-lg overflow-hidden">
                                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                                        {
                                            <img src="@item.ImageUrl" alt="@item.Name" class="w-full h-full object-cover" loading="lazy" />
                                        }
                                        else
                                        {
                                            <div class="w-full h-full flex items-center justify-center">
                                                <svg class="h-5 w-5 text-cream-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
                                            </div>
                                        }
                                    </div>
                                    <div class="flex-1 min-w-0">
                                        <p class="text-sm font-medium text-brand-950 truncate">@item.Name</p>
                                        <p class="text-xs text-brand-400">Qty: @item.Quantity</p>
                                    </div>
                                    <p class="text-sm font-medium text-brand-950">$@item.LineTotal.ToString("F2")</p>
                                </div>
                            }
                        }
                    </div>
                </div>

                <!-- Step 3: Discount & Place Order -->
                <div class="bg-white rounded-xl border border-cream-200 p-6" id="checkout-step-confirm" data-testid="checkout-confirm">
                    <div class="flex items-center space-x-3 mb-6">
                        <span class="flex items-center justify-center w-8 h-8 rounded-full bg-brand-500 text-white text-sm font-bold">3</span>
                        <h2 class="font-display text-xl font-semibold text-brand-950">Complete Order</h2>
                    </div>

                    <!-- Discount Code -->
                    <div class="mb-6" data-testid="checkout-discount">
                        <label class="block text-sm font-medium text-brand-950 mb-2">Discount Code</label>
                        <div class="flex gap-3">
                            <input type="text" name="discountCode" placeholder="Enter code"
                                   class="flex-1 px-4 py-2.5 border border-cream-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent"
                                   data-testid="checkout-discount-input" />
                            <button type="button" id="apply-discount-btn" class="bg-white text-brand-950 font-medium py-2.5 px-5 rounded-lg border border-cream-300 hover:bg-cream-50 transition-colors text-sm" data-testid="checkout-discount-apply">
                                Apply
                            </button>
                        </div>
                    </div>

                    <button type="submit" class="w-full bg-brand-500 text-white font-semibold py-4 px-8 rounded-full hover:bg-brand-600 transition-colors text-lg flex items-center justify-center space-x-2" data-testid="checkout-place-order">
                        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                        </svg>
                        <span>Place Order</span>
                    </button>
                </div>
            </div>

            <!-- Right Column: Summary -->
            <div class="lg:col-span-1" data-testid="checkout-summary">
                <div class="bg-white rounded-xl border border-cream-200 p-6 sticky top-24">
                    <h2 class="font-display text-lg font-semibold text-brand-950 mb-4">Order Summary</h2>
                    <div class="space-y-3 text-sm">
                        <div class="flex justify-between py-1">
                            <span class="text-brand-400">Subtotal (@Model.Items?.Count items)</span>
                            <span class="font-medium text-brand-950" data-testid="checkout-subtotal">$@Model.Subtotal.ToString("F2")</span>
                        </div>
                        @if (Model.DiscountAmount > 0)
                        {
                            <div class="flex justify-between py-1">
                                <span class="text-brand-400">Discount</span>
                                <span class="font-medium text-green-600" data-testid="checkout-discount-amount">-$@Model.DiscountAmount.ToString("F2")</span>
                            </div>
                        }
                        <div class="flex justify-between py-1">
                            <span class="text-brand-400">Shipping</span>
                            <span class="font-medium text-brand-950" data-testid="checkout-shipping-cost">
                                @if (Model.ShippingCost == 0)
                                {
                                    <span class="text-green-600">Free</span>
                                }
                                else
                                {
                                    <text>$@Model.ShippingCost.ToString("F2")</text>
                                }
                            </span>
                        </div>
                        <div class="flex justify-between py-1">
                            <span class="text-brand-400">Estimated Tax</span>
                            <span class="font-medium text-brand-950" data-testid="checkout-tax">$@Model.Tax.ToString("F2")</span>
                        </div>
                        <hr class="border-cream-200" />
                        <div class="flex justify-between py-2 text-base">
                            <span class="font-semibold text-brand-950">Total</span>
                            <span class="font-bold text-brand-500 text-lg" data-testid="checkout-total">$@Model.Total.ToString("F2")</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/js/checkout.js"></script>
}
